<view class="weui-flex my-top my-top-fixed my-top-style">
  <view class="my-btn-icon" bindtap="tapBack" >
    <image src="../../static/icon_nav_back.png"></image>
  </view>
  <view class="weui-flex__item">
    <view class="placeholder">{{corp}}</view>
  </view>
</view>
<view class="my-noscroll">
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">
      <view class="weui-media-box__desc weui-media-box__title_in-text my-panel-title">热门职位：</view>
    </view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_text">
        <view class="weui-media-box__desc">
          <span class="my-panel-tag" wx:for="{{positionls}}" wx:key="{{*this}}">{{item}}</span>
        </view>
      </view>
    </view>
    <view class="weui-panel__hd">
      <view class="weui-media-box__desc weui-media-box__title_in-text my-panel-title">平均工资：</view>
    </view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_text">
        <view class="weui-media-box__desc">
          <span class="my-panel-cell my-panel-tag">{{salary}}</span>
        </view>
      </view>
    </view>   
  </view>
  <navigator class="weui-panel weui-panel_access" wx:for="{{offerls}}" wx:key="{{*this}}" url="../detail/detail?id={{item.id}}&getdata=request">
    <view class="weui-panel__hd">
      <span class="my-text-left my-panel-cell">{{item.position}}</span>
      <span class="my-text-right my-panel-cell">工资：{{item.salary}}</span>
    </view>
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_text">
        <!--<view class="weui-media-box__title weui-media-box__title_in-text">{{item.position}}</view>-->
        <view class="weui-media-box__desc">
        	{{item.remark}}
        </view>
      </view>
    </view>
